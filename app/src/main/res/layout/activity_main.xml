<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="60dp"
    android:orientation="vertical"
    android:background="@drawable/fondo2"
    tools:context="games.lancelot.reto2.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibAyuda"
        android:layout_gravity="right"
        android:background="@drawable/info2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="mostrarAyuda"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etNombre"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:textColorHint="#42a5f5"
        android:hint="Nombre"
        android:singleLine="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etApellido"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:textColorHint="#42a5f5"
        android:hint="Apellido"
        android:singleLine="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etEdad"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:textColorHint="#42a5f5"
        android:hint="Edad"
        android:singleLine="true"
        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etDNI"
        android:layout_gravity="center_horizontal"
        android:hint="DNI (max. 8 caracteres)"
        android:maxLength="8"
        android:textColor="#fff"
        android:textColorHint="#42a5f5"
        android:singleLine="true"
        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etContra"
        android:layout_gravity="center_horizontal"
        android:hint="ContraseÃ±a"
        android:maxLength="8"
        android:textColor="#fff"
        android:textColorHint="#42a5f5"
        android:singleLine="true"
        android:inputType="textPassword" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:id="@+id/ibIngersar"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/exito2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="mostrarValor"/>

    </RelativeLayout>


</LinearLayout>


